<div id="content-header">
    <h1>$currentResource.getName()</h1>
</div>
<style>

</style>
<div id="operation-container">

    <a href="./list"><span class="oper-btn add">返回列表页</span></a>

</div>

<div id="content-container">
    <form action="edit" method="post">
        <p>标题</p>
        <input type="text" placeholder="标题" name="title" value="$domain.getTitle()">
        <p>摘要</p>
        <input type="text" placeholder="标题" name="brief" style="width:98%" value="$!domain.getBrief()">
        <p>时间</p>
        <input type="text" placeholder="时间" name="logTime" value="$!domain.getLogTime()">
        <input type="hidden"  name="id" value="$!domain.getId()">

        <p>
        <p>是否有视频</p>
        #if($!domain.getHasVideo() == 1)
            <input type="radio" name="hasVideo" value="1" class="has-video" checked>有
            <input type="radio" name="hasVideo" value="0" class="has-video">无
        #else
        <input type="radio" name="hasVideo" value="1" class="has-video" >有
        <input type="radio" name="hasVideo" value="0" class="has-video" checked>无
        #end
        </p>

        <p>正文</p>
        <script id="container" name="content" type="text/plain">
        $domain.getContent()


        </script>


        <button class="submit-bottom">提交</button>

    </form>

</div>
#parse('layout/script.vm')
