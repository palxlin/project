#set($cPath = "http://121.42.45.249:8010/dc-web")
<div id="content-header">
    <h1>$currentResource.getName()</h1>
</div>

<style>
    .detail-suggestion{position:absolute;left:0;right:0;padding:40px;background:#E2E2E2}
</style>
<div id="content-container">
    <table class="pt-table">
        <thead>
        <tr>
            <th>编号</th>
            <th>手机</th>
            <th>地址</th>
            <th>邮箱</th>
            <th>标题</th>
            <th>内容</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
            #foreach($domain in $domainList.getResult())
            <tr>
                <td>$!domain.getId()</td>
                <td>$!domain.getMobile()</td>
                <td>$!domain.getAddress()</td>
                <td>$!domain.getEmail()</td>
                <td>$!domain.getTitle()</td>
                <td><p style="margin:0" class="click-to-show">
                        <a href="javascript:;" class="btn btn-oper detail" data-model="$currentResource.getUri()" data-ref="$domain.getId()">详情<i class="fa fa-chevron-right"></i></a>
                    </p>

                    <p style="margin:0" class="hide detail-suggestion">$!domain.getContent()</p>
                </td>
                <td>
                    <a href="javascript:;" class="btn btn-oper del" data-model="$currentResource.getUri()"
                       data-ref="$domain.getId()">删除<i
                            class="fa fa-chevron-right"></i></a>
                </td>
            </tr>
            #end

        </tbody>
    </table>
    <div class="pagination"></div>
</div>
#parse('layout/script.vm')

<script type="text/javascript" src="$cPath/resources/js/admin.js"></script>
<script>
    $(document).ready(function () {
        $(".click-to-show a").click(function(){
            $(this).parent().parent().find(".detail-suggestion").toggleClass("hide");
        })



        #if($domainList.getTotalPages() > 0)

            $('.pagination').twbsPagination({
                totalPages: $domainList.getTotalPages(),
                visiblePages: 7,
                startPage: $domainList.getPageNo(),
                hrefVariable: "{{number}}",
                href: window.app.cPath + "/$currentResource.getUri()" + "?p={{number}}",
                onPageClick: function (event, page) {
                }
            });
        #end
    });
</script>